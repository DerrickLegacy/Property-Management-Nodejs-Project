<body class="login_bckg" >
  <div class="login-box1" >
    <img class="login-image" src="/img/Global-logo.PNG" alt="">
  </div>
  <div class="login">
    <h1 style="font-size: 40px; text-align: center">Login </h1>
    <form action="/" method="POST">
      <p>
        <label for="username"  >Username: </label><br>
        <input class="textbox" type="email" name ="username" id="username" placeholder="e.g nankya@gmail.com">
      </p>
      <p>
        <label for="password"  id="password">Password: </label><br>
        <input type="password" name ="password" class="textbox" id="password" placeholder="Enter password">
      </p>
      <a href="" style=" text-decoration: none;color: blue;">Forgot password?</a>
      <input type="submit" id="btn-login" class="textbox btn btn-primary " style="background-color: #83ccdf" value="LOGIN">
    </form>
    <p>
      
      Don't have an account?<a href="/register1" style="text-decoration: none;color: blue;"> &nbsp;  Register</a> 
    </p>
  </div>
